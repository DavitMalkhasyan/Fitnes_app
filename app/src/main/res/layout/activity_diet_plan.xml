<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diet_plan">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="DIET PLANS"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@color/teal_200"
        android:textAlignment="center"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView14"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:translationX="20dp"
        android:translationY="50dp"
        android:padding="10dp"
        android:src="@drawable/eat_well_feel_good" />

    <android.widget.Button
        android:id="@+id/musgain"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/optionbuton"
        android:text="MUSCLE GAIN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="200dp" />

    <android.widget.Button
        android:id="@+id/wtgain"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/optionbuton"
        android:text="WEIGHT GAIN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="270dp" />

    <android.widget.Button
        android:id="@+id/wtloss"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/optionbuton"
        android:text="WEIGHT LOSS"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="340dp" />

    <android.widget.Button
        android:id="@+id/inscntrldiet"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/optionbuton"
        android:text="INSULINE CONTROL DIET"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="410dp" />

    <android.widget.Button
        android:id="@+id/bpctrl"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/optionbuton"
        android:text="BLOOD PRESSURE CONTROL"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="480dp" />

